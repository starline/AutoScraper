{
  "manifest_version": 3,
  "name": "Auto Info Parser",
  "version": "1.1",
  "description": "Извлекает информацию с iaai.com и copart.com и копирует в буфер.",
  "permissions": [
    "scripting",
    "clipboardWrite",
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/parsers/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}